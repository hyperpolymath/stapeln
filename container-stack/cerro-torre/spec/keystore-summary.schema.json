{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cerro-torre.org/schemas/keystore-summary.schema.json",
  "title": "Cerro Torre Keystore Summary",
  "description": "Non-secret, policy-visible metadata about a keystore. Does NOT contain key material or password hashes.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "keystore_id",
    "created_at_utc",
    "policy",
    "keys"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "keystore_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this keystore instance."
    },
    "created_at_utc": {
      "type": "string",
      "format": "date-time"
    },
    "last_modified_utc": {
      "type": "string",
      "format": "date-time"
    },
    "policy": {
      "type": "object",
      "description": "Policy metadata (no secrets).",
      "additionalProperties": false,
      "required": [
        "policy_version",
        "profile",
        "algorithm"
      ],
      "properties": {
        "policy_version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+$"
        },
        "profile": {
          "type": "string",
          "enum": ["interactive", "moderate", "high"],
          "description": "Argon2id profile used for password protection."
        },
        "algorithm": {
          "type": "string",
          "const": "argon2id"
        },
        "upgrade_available": {
          "type": "boolean",
          "description": "True if current policy profile is weaker than configured default."
        }
      }
    },
    "keys": {
      "type": "array",
      "description": "Metadata about keys in this keystore. No private material.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "key_id",
          "algorithm",
          "purpose",
          "created_at_utc"
        ],
        "properties": {
          "key_id": {
            "type": "string",
            "minLength": 1
          },
          "algorithm": {
            "type": "string",
            "description": "Key algorithm: ed25519, ml-dsa-87, ed448, etc."
          },
          "purpose": {
            "type": "string",
            "enum": ["signing", "encryption", "key_agreement"],
            "description": "What this key is used for."
          },
          "created_at_utc": {
            "type": "string",
            "format": "date-time"
          },
          "expires_at_utc": {
            "type": "string",
            "format": "date-time",
            "description": "Optional expiration."
          },
          "public_key_fingerprint": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA-256 of the public key bytes."
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["governance", "developer", "ci"]
            },
            "description": "Roles this key is authorized for."
          },
          "suite_ids": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Crypto suites this key can be used with."
          }
        }
      }
    },
    "audit": {
      "type": "object",
      "description": "Audit metadata.",
      "additionalProperties": false,
      "properties": {
        "last_unlock_utc": {
          "type": "string",
          "format": "date-time"
        },
        "unlock_count": {
          "type": "integer",
          "minimum": 0
        },
        "last_policy_upgrade_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
