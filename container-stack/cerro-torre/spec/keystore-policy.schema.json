{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cerro-torre.org/schemas/keystore-policy.schema.json",
  "title": "Cerro Torre Keystore Policy (Argon2id)",
  "description": "Schema for keystore password KDF policy. This is separate from artifact hashing.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "policy_version",
    "purpose",
    "algorithm",
    "encoding",
    "defaults",
    "profiles",
    "constraints",
    "invariants",
    "upgrade"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "$id": {
      "type": "string"
    },
    "policy_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "purpose": {
      "type": "string",
      "const": "password_kdf_for_local_keystore_only"
    },
    "algorithm": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "version"],
      "properties": {
        "id": { "type": "string", "const": "argon2id" },
        "version": { "type": "integer", "const": 19 }
      }
    },
    "encoding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["format", "example_shape"],
      "properties": {
        "format": {
          "type": "string",
          "const": "phc_string"
        },
        "example_shape": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "defaults": {
      "$ref": "#/$defs/argon2_profile"
    },
    "profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "allOf": [
          {
            "type": "object",
            "required": ["name", "intended_use"]
          },
          { "$ref": "#/$defs/argon2_profile" }
        ]
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "salt_bytes",
        "hash_bytes",
        "parallelism",
        "memory_kib",
        "time_cost"
      ],
      "properties": {
        "salt_bytes": { "$ref": "#/$defs/min_max_int" },
        "hash_bytes": { "$ref": "#/$defs/min_max_int" },
        "parallelism": { "$ref": "#/$defs/min_max_int" },
        "memory_kib": { "$ref": "#/$defs/min_max_int" },
        "time_cost": { "$ref": "#/$defs/min_max_int" }
      }
    },
    "invariants": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "upgrade": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "strategy",
        "allow_profile_change",
        "allow_increase_only"
      ],
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["rehash_on_successful_unlock"]
        },
        "allow_profile_change": { "type": "boolean" },
        "allow_increase_only": { "type": "boolean" }
      }
    }
  },
  "$defs": {
    "argon2_profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "salt_bytes",
        "hash_bytes",
        "parallelism",
        "memory_kib",
        "time_cost"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "intended_use": {
          "type": "string",
          "minLength": 1
        },
        "profile": {
          "type": "string"
        },
        "salt_bytes": {
          "type": "integer",
          "minimum": 8
        },
        "hash_bytes": {
          "type": "integer",
          "minimum": 16
        },
        "parallelism": {
          "type": "integer",
          "minimum": 1
        },
        "memory_kib": {
          "type": "integer",
          "minimum": 8192
        },
        "time_cost": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "min_max_int": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min", "max"],
      "properties": {
        "min": { "type": "integer", "minimum": 1 },
        "max": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
